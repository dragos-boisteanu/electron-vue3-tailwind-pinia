{
	"appId": "YouAppID",
	"asar": true,
	"files": ["dist/**/*", "main.js", "preload.js"],
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		],
		"artifactName": "${productName}_${version}.${ext}"
	},
	"nsis": {
		"oneClick": false,
		"perMachine": false,
		"allowToChangeInstallationDirectory": true,
		"deleteAppDataOnUninstall": true
	}
}
